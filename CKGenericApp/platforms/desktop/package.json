{
  "name": "craftkontrol-desktop",
  "version": "1.0.31",
  "description": "CraftKontrol Desktop - Cross-platform wrapper for AI Agents",
  "author": "CraftKontrol - Arnaud Cassone / Artcraft Visuals",
  "license": "MIT",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "clean": "node -e \"const fs=require('fs');const d='dist';if(fs.existsSync(d)){try{fs.rmSync(d,{recursive:true,force:true,maxRetries:3,retryDelay:1000});}catch(e){console.warn('Warning: Could not fully clean dist folder');}console.log('âœ“ Cleaned dist folder');}\"",
    "prebuild": "npm run clean && npm version patch --no-git-tag-version",
    "build": "electron-builder",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "build:all": "npm run prebuild && electron-builder -mwl",
    "build:direct": "npm version patch --no-git-tag-version && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.craftkontrol.desktop",
    "productName": "CraftKontrol Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "resources/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon-256.png",
      "artifactName": "CKDesktop-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.productivity",
      "artifactName": "CKDesktop-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png",
      "category": "Utility",
      "artifactName": "CKDesktop-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
